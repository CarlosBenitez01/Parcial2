<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">



        <ImageView
            android:id="@+id/iv_Imagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_Especie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_Imagen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Especie"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_Sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Especie"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:text="Sexo"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_Habitad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Sexo"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:text="Habitad"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>